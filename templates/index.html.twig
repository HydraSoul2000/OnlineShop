{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('index') }}">OnlineShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('shop') }}">Shop</a>
                </li>
                {% if app.user %}
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('create') }}">Create</a>
                    </li>
                {% endif %}
            </ul>
            {% if app.user %}
                <a style="margin-right: 5px; color: white;">Logged in as {{ app.user.username }}!</a><a href="{{ path('app_logout') }}"><button type="button" class="btn btn-outline-light" >Logout</button></a>
            {% else %}
            <a href="{{ path('login') }}"><button type="button" class="btn btn-outline-light" >Login</button></a>
            {% endif %}
        </div>
    </nav>


    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>
    </div>

{% endblock %}
