{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('index') }}">OnlineShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('index') }}">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('shop') }}">Shop <span class="sr-only">(current)</span></a>
                </li>
                {% if app.user %}
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('create') }}">Create</a>
                    </li>
                {% endif %}
            </ul>
            {% if app.user %}
            <a style="margin-right: 5px; color: white;">Logged in as {{ app.user.username }}!</a><a href="{{ path('app_logout') }}"><button type="button" class="btn btn-outline-light" >Logout</button></a>
            {% else %}
                <a href="{{ path('login') }}"><button type="button" class="btn btn-outline-light" >Login</button></a>
            {% endif %}
        </div>
    </nav>

    <div class="container" style="margin-top: 25px;">
        <div class="row mb-2">

            {% for post in posts %}
            <div class="col-md-6">
                <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0">{{ post.name }}</h3>
                        <div class="mb-1 text-muted">{{ post.price }} â‚¬</div>
                        <p class="card-text mb-auto">{{ post.description }}</p>
                        {% if app.user %}

                        <a href="{{ path('delete', {id: post.id}) }}"><input type="submit" class="btn btn-danger btn-block" style="float:right;" value="Delete"></a>
                        {% endif %}
                    </div>
                    <div class="col-auto d-none d-lg-block">
                        <img src="{{ '/uploads/' ~ post.image}}" class="bd-placeholder-img" width="200" height="200" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"/>
                    </div>
                </div>
            </div>{% endfor %}

        </div>
    </div>

{% endblock %}
